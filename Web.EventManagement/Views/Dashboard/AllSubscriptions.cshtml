@using System.Security.Claims
@using BrightStar.Services.Application.Common.Utility
@using BrightStar.Services.Domain.Entities
@model IEnumerable<EventSubscription>

<div class="d-flex justify-content-center">
    <div class="card shadow border-0 mt-4" style="width: 80%;">
        <div class="card-header bg-secondary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white"> All Subscribed Events</h1>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">
                        Back To Events
                    </a>

                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>EventId</th>
                        <th>SubscriptionId</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EventId</td>
                            <td>@item.SubscriptionId</td>

                            <td>
                                <form  asp-action="AdminUnsubscribe" method="post">
                                    <input type="hidden" name="eventId" value="@item.EventId" />
                                    <input type="hidden" name="userId" value="@item.UserId" /> <!-- Admin provides the userId to unsubscribe -->
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-x-circle-fill text-danger"></i> Unsubscribe User
                                    </button>
                                </form>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>