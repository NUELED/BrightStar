@using BrightStar.Services.Domain.Entities
@model Event


<form method="post">
    <br />
    <input type="hidden" asp-for="EventId" />
    <div class="container border p-3" style="max-width: 800px;">
        <h1 class="text-white text-center text-danger">Delete Event</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Event Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="EventCode" class="form-control text-danger" readonly />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Title" class="form-control" readonly />
                <span asp-validation-for="Title" class="text-danger" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Date</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Date" class="form-control" type="date" readonly />
                <span asp-validation-for="Date" class="text-danger" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Start Time</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Time" class="form-control" type="time" readonly />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Location</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="location" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Max Participants</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MaxParticipants" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" readonly></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>



@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
