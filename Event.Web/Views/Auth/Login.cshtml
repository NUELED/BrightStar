@using BrightStar.Services.Application.Common.DTO
@model LoginRequestDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymou" rel="stylesheet">
    <style>
        .full-height {
            height: 100vh;
        }

        .image-section {
            background-image: url('/images/event_management.jpeg');
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row full-height">
            <!-- Image Section -->
            <div class="col-md-6 image-section d-none d-md-block"></div>

            <!-- Login Form Section -->
            <div class="col-md-6 d-flex align-items-center justify-content-center" style="background-color: black;">
                <div class="w-50">
                    <div class="card">
                        <div class="card-header text-center" style="background-color: rgba(235, 141, 8, 0.318);">
                            <h4>Login</h4>
                        </div>
                        <div class="card-body" style="background-color: rgba(235, 141, 8, 0.318);">
                            <form method="post">
                                <div class="mb-3">
                                    <input asp-for="service_id" class="form-control" placeholder="Email..." />
                                    <span asp-validation-for="service_id" class="text-danger"> </span>
                                </div>
                                <div class="mb-3">
                                    <input asp-for="password" class="form-control" placeholder="Password..." />
                                    <span asp-validation-for="password" class="text-danger"> </span>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Remember me</label>
                                </div>
                                <button type="submit" class="btn btn-dark w-100">Login</button>
                            </form>
                        </div>
                        <div class="card-footer text-center" style="background-color: rgba(235, 141, 8, 0.318);">
                            <a asp-area="" asp-controller="Auth" asp-action="Register" class="link-dark">Don't have an account? Register here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>













